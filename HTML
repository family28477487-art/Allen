<script setup>
import { ref, computed } from 'vue';

// --- è¨­è¨ˆèˆ‡é…è‰² ---
const appBgColor = ref('#F4F7FB'); // é é¢åº•è‰²å»¶ä¼¸ï¼ˆé¡ä¼¼å†°é›ª/æ·ºè—è‰²ï¼‰
const mainContentBgColor = ref('#FFFFFF');

// --- å°èˆªèˆ‡ç‹€æ…‹ç®¡ç† ---
const activeTab = ref('schedule');
const tabs = [
  { id: 'schedule', iconClass: 'fa-solid fa-map-location-dot', name: 'è¡Œç¨‹' },
  { id: 'info', iconClass: 'fa-solid fa-info', name: 'è³‡è¨Š' },
  { id: 'shopping', iconClass: 'fa-solid fa-basket-shopping', name: 'è³¼ç‰©' },
  { id: 'expenses', iconClass: 'fa-solid fa-money-bill-wave', name: 'èŠ±è²»' },
];

const activeDay = ref('2025-12-01'); // é è¨­ç¬¬ä¸€å¤©
const days = ref([
    { date: '2025-12-01', week: 'Mon' },
    { date: '2025-12-02', week: 'Tue' },
    { date: '2025-12-03', week: 'Wed' },
    // æ›´å¤šæ—¥æœŸ...
]);

// --- è¡Œç¨‹è³‡è¨Š (è™›æ“¬æ•¸æ“š) ---
const categories = ['æ™¯é»', 'ä½å®¿', 'ç¾é£Ÿ', 'è³¼ç‰©', 'èˆªç­', 'å…¶ä»–'];
const filterCategory = ref('all');

const scheduleData = ref([
    // ç¬¬ä¸€å¤©è¡Œç¨‹
    { id: 1, day: '2025-12-01', category: 'èˆªç­', name: 'æ¡ƒåœ’åœ‹éš›æ©Ÿå ´ (TPE) å‡ºç™¼', hours: null, price: null, notes: 'è¯èˆª CI130', location: 'æ¡ƒåœ’åœ‹éš›æ©Ÿå ´', transport: 'car', travelTime: 'N/A' },
    { id: 2, day: '2025-12-01', category: 'ç§Ÿè»Š', name: 'æ–°åƒæ­²æ©Ÿå ´ç§Ÿè»Š', hours: '08:00-20:00', price: null, notes: 'Toyota Rent a Car', location: 'æ–°åƒæ­²æ©Ÿå ´', transport: 'walk', travelTime: '15åˆ†é˜' },
    { id: 3, day: '2025-12-01', category: 'ä½å®¿', name: 'æœ­å¹Œç¾å±…é£¯åº—', hours: 'Check-in: 15:00', price: null, notes: 'ä½æ–¼è–„é‡å€', location: 'æœ­å¹Œç¾å±…é£¯åº—', transport: 'car', travelTime: '1å°æ™‚' },
    // ç¬¬äºŒå¤©è¡Œç¨‹
    { id: 4, day: '2025-12-02', category: 'æ™¯é»', name: 'ç™½è‰²æˆ€äººå…¬åœ’', hours: '10:00-17:00', price: '800', notes: 'ç¶²ç¾æ‹ç…§æ™¯é»', location: 'ç™½è‰²æˆ€äººå…¬åœ’', transport: 'car', travelTime: '30åˆ†é˜' },
    // æ›´å¤šè¡Œç¨‹...
]);

const filteredSchedule = computed(() => {
    return scheduleData.value
        .filter(item => item.day === activeDay.value)
        .filter(item => filterCategory.value === 'all' || item.category === filterCategory.value);
});

// --- è³‡è¨Šåˆ†é è³‡æ–™ (è™›æ“¬æ•¸æ“š) ---
const weather = ref({ temp: 3, feelsLike: -1, icon: 'fa-solid fa-snowflake' });
const weatherIcon = computed(() => weather.value.icon || 'fa-solid fa-cloud');

const currentRate = ref(0.22); // è™›æ“¬åŒ¯ç‡
const jpyAmount = ref(10000); // è¼¸å…¥æ—¥å¹£

const convertedTWD = computed(() => {
    // å¯¦éš›æ‡‰å‘¼å« API æŠ“å–å³æ™‚åŒ¯ç‡
    if (jpyAmount.value > 0) {
        return (jpyAmount.value * currentRate.value).toFixed(2);
    }
    return 0;
});

const flights = ref([
    { id: 1, type: 'å»ç¨‹', flightNo: 'CI130', depAirport: 'TPE', depTime: '08:30', arrAirport: 'CTS', arrTime: '13:15', duration: '3h 45m' },
    { id: 2, type: 'å›ç¨‹', flightNo: 'CI131', depAirport: 'CTS', depTime: '14:15', arrAirport: 'TPE', arrTime: '18:00', duration: '3h 45m' },
]);

const accommodation = ref({ 
    name: 'æœ­å¹Œç¾å±…é£¯åº—', 
    phone: '+81-11-513-1100', 
    address: 'ã€’064-0805 åŒ—æµ·é“æœ­å¹Œå¸‚ä¸­å¤®åŒºå—ï¼•æ¡è¥¿ï¼’ä¸ç›®ï¼”',
});

const carRental = ref({
    company: 'Toyota Rent a Car',
    pickupLocation: 'æ–°åƒæ­²æ©Ÿå ´ç‡Ÿæ¥­æ‰€',
});


// --- è³¼ç‰©èˆ‡èŠ±è²» (è™›æ“¬æ•¸æ“š) ---
const shoppingList = ref([
    { id: 101, name: 'ç™½è‰²æˆ€äºº (ç›’)', image: null, bought: false },
    { id: 102, name: 'è–¯æ¢ä¸‰å…„å¼Ÿ (10åŒ…)', image: null, bought: true },
]);

const expenses = ref([
    { id: 201, category: 'ä½å®¿', name: 'æœ­å¹Œç¾å±…é£¯åº— å…©æ™š', date: '2025-12-01', amount: 35000, payment: 'ä¿¡ç”¨å¡', notes: 'å·²ä»˜æ¸…' },
    { id: 202, category: 'é¤é£²', name: 'æ¹¯å’–å“©', date: '2025-12-02', amount: 3500, payment: 'ç¾é‡‘', notes: 'åˆé¤' },
]);

const totalExpense = computed(() => {
    return expenses.value.reduce((sum, item) => sum + item.amount, 0);
});


// --- åŠŸèƒ½å‡½æ•¸ ---

// äº¤é€š Icon è½‰æ›
const getTrafficIcon = (transport) => {
    switch (transport) {
        case 'walk': return 'fa-solid fa-person-walking';
        case 'car': return 'fa-solid fa-car';
        case 'public': return 'fa-solid fa-bus';
        default: return 'fa-solid fa-route';
    }
};

// ç²å–å‰ä¸€å€‹è¡Œç¨‹åç¨± (ç”¨æ–¼è¨ˆç®—äº¤é€šæ™‚é–“)
const getPreviousLocation = (currentIndex) => {
    if (currentIndex === 0) {
        // æ¯æ—¥ç¬¬ä¸€å€‹è¡Œç¨‹ï¼šä»¥å‰ä¸€æ—¥ä½çš„é£¯åº—è¨ˆç®—
        return 'å‰ä¸€æ™šä½å®¿åœ°é»'; 
    }
    // å¯¦éš›é–‹ç™¼éœ€æ ¹æ“šè¡Œç¨‹åˆ—è¡¨ç²å–å‰ä¸€å€‹è¡Œç¨‹çš„åç¨±
    return 'ä¸Šä¸€å€‹è¡Œç¨‹'; 
};

// Google Map å°èˆª (éœ€ä½¿ç”¨è€…æˆæ¬Šå®šä½)
const openNavigation = (destination) => {
    // å¯¦ä½œï¼šé–‹å•Ÿ Google Maps App æˆ–ç¶²é ç‰ˆå°èˆª
    const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
    if (isMobile) {
        // å˜—è©¦é–‹å•Ÿ App
        window.open(`https://maps.apple.com/?daddr=${destination}`, '_blank'); // iOS
    } else {
        // ç¶²é ç‰ˆ
        window.open(`https://www.google.com/maps/dir/?api=1&destination=${destination}`, '_blank');
    }
};


// --- æ¨¡æ…‹è¦–çª—æ“ä½œ ---
const isModalOpen = ref(false);
const modalTitle = ref('');
const currentModalType = ref('');
const isEditing = ref(false);

const openEditModal = (item) => {
    currentModalType.value = 'schedule';
    isEditing.value = !!item; // åˆ¤æ–·æ˜¯å¦ç‚ºç·¨è¼¯æ¨¡å¼
    modalTitle.value = item ? 'ç·¨è¼¯è¡Œç¨‹' : 'æ–°å¢è¡Œç¨‹';
    isModalOpen.value = true;
};

const openShoppingModal = () => {
    currentModalType.value = 'shopping';
    modalTitle.value = 'æ–°å¢è³¼ç‰©æ¸…å–®é …ç›®';
    isModalOpen.value = true;
};

const openExpenseModal = () => {
    currentModalType.value = 'expenses';
    modalTitle.value = 'æ–°å¢èŠ±è²»è¨˜éŒ„';
    isModalOpen.value = true;
};

const confirmDelete = () => {
    if (window.confirm('ç¢ºå®šè¦åˆªé™¤æ­¤è¡Œç¨‹å—ï¼Ÿæ­¤æ“ä½œä¸å¯é€†ã€‚')) {
        // åŸ·è¡Œåˆªé™¤é‚è¼¯
        console.log('è¡Œç¨‹å·²åˆªé™¤');
        isModalOpen.value = false;
    }
};

// --- API æ•´åˆéª¨æ¶ ---
// å¯¦éš›å°ˆæ¡ˆä¸­ï¼Œæ‚¨éœ€è¦åœ¨æ­¤è™•å¯¦ä½œ API å‘¼å«ï¼Œä¾‹å¦‚ï¼š
// function fetchWeatherData(location) { ... }
// function fetchExchangeRate() { ... }
// function calculateTravelTime(origin, destination, transport) { ... }


</script>

